/* pages/service/service.wxss */
.service-container{
  text-align: center
}
.swiper_container {
height: 35px;
width: 100%;
display: inline-block;
}
.userlist{
background-color:#FAF2D5;
height: 35px; 
width: 100%;
overflow: hidden
}
.swiper_item {
font-size: 13px;
color: #FF8830;
letter-spacing: 0;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
padding-top: 9px;
}
.gonggao-image{
  width: 18px;
  height: 15px;
  padding-top: 10px;
}
.image-container{
  position: absolute;
  width: 43px;
  height: 35px;
  display: flex;
  align-content: center;
  justify-content: center;
  z-index: 10;
  background-color:#FAF2D5;
}
.slide{
  width: 238px !important;
  text-align: center
}
.swiper-img{
  height: 212px;
}
.item-img{
  height: 212px
}
.swiper{
  width: 100%;
}
.devices-img{
  width: 100%;
}
.details{
  width: 90%;
  margin-left: 5%;
}
.details-up{
 width: 100%;
 height: 85px;
 
 border-bottom: solid 1px #F2F2F2;
}
.details-up-left{
  display: inline-block;
  float:left;
  text-align: left;
  padding-top: 20px;
}
.details-up-right{
  display: inline-block;
  float:right;
  text-align: right;
  padding-top: 20px;
}
.details-up-left > .details-up-up{
  font-family: PingFang-SC-Medium;
font-size: 18px;
color: #333333;
letter-spacing: 0;
line-height: 27px;
font-weight: 600;
}
.details-up-right > .details-up-up{
  font-family: PingFang-SC-Medium;
  font-size: 18px;
color:#17B963;
letter-spacing: 0;
line-height: 27px;
}
.details-up-down{
  font-family: PingFang-SC-Regular;
font-size: 13px;
color: #999999;
letter-spacing: 0;
line-height: 27px;
}
.details-bottom{
  text-align: left;
  font-family: PingFang-SC-Regular;
font-size: 16px;
color: #666666;
letter-spacing: 0.35px;
line-height: 28px;
}
.book{
  width: 100%;
  background: #17B963;
  border: 0 solid #0BAE58;
  font-family: PingFang-SC-Medium;
font-size: 18px;
color: #FFFFFF;
letter-spacing: 10px;
position: absolute;
bottom: 0px;
border-radius: 0px;
}