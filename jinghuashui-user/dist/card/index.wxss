.i-card {
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  background: #efeef4;
  display: block;
}

.i-card-full {
  margin: 0;
  border-left: none;
  border-right: none;
  border-radius: 0;
}

.i-card-header {
  width: 100%;
  padding: 0;
  height: 145px;
}

.i-card-header-content {
  width: 100%;
  height: 130px;
  background: #17b963;
  margin: 0;
  text-align: center;
}

.i-card-header-thumb {
  width: 65px;
  height: 61px;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  vertical-align: middle;
  border-radius: 50%;
  margin-top: 15px;
}

.i-card-header-title {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #1c2438;
}

.i-card-header-extra {
  width: 100%;
  height: 25px;
  text-align: right;
  font-size: 14px;
  background-image: linear-gradient(-180deg, #17b963 0%, #e9e9f4 100%);
  z-index: -1;
}

.i-card-body {
  padding: 16px;
  color: #495060;
  font-size: 14px;
  height: 100%;
  margin-top: -25px;
}

.i-card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px;
}

.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 12px;
}

.title {
  margin-top: 6.5px;
  font: 16px;
  color: #fff;
}
